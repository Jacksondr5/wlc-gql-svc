{
  "name": "wlc-gql-svc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-gql && npm run build-ts",
    "serve": "node dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,GraphQL,Node\" -c \"cyan.bold,magenta.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-gql\" \"npm run serve-debug\"",
    "push-schema": "npx apollo service:push",
    "build-gql": "graphql-codegen --config graphqlCodegen.yml && ts-node copyGraphQLFiles.ts",
    "watch-gql": "concurrently -k -p \"[{name}]\" -n \"Codegen,File Copy\" -c \"red.bold,yellow.bold\" \"graphql-codegen --config graphqlCodegen.yml --watch\"  \"ts-node copyGraphQLFiles.ts --watch\""
  },
  "dependencies": {
    "apollo-server": "^2.8.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-import": "^0.7.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/introspection": "1.5.0",
    "@graphql-codegen/typescript": "1.5.0",
    "@graphql-codegen/typescript-resolvers": "1.5.0",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.6.9",
    "@types/recursive-readdir": "^2.2.0",
    "@types/request": "^2.48.2",
    "apollo": "^2.16.3",
    "chai": "^4.2.0",
    "concurrently": "^4.1.1",
    "jest": "^24.8.0",
    "lodash": "^4.17.15",
    "nodemon": "^1.19.1",
    "recursive-readdir": "^2.2.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
